{
  "builders": [
    {
      "type": "vsphere-clone",
      "vcenter_server": "{{user `vcenter_server`}}",
      "username": "{{user `vcenter_user`}}",
      "password": "{{user `vcenter_password`}}",
      "insecure_connection": "true",
      "datacenter": "{{user `vcenter_datacenter`}}",
      "resource_pool": "{{user `vcenter_resource_pool`}}",

      "template": "templates/ubuntu-16.04-template-dhcp",
      "vm_name": "ds-unifi-network",
      "cluster": "{{user `vcenter_cluster`}}",
      "host": "{{user `vcenter_host`}}",
      "datastore": "{{user `vcenter_datastore`}}",

      "communicator": "ssh",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_private_key_file": "{{user `ssh_private_key_file`}}",

      "convert_to_template": false,
      "create_snapshot": false
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "script": "machines/ds-unifi-network/ds-unifi-network-setup.sh",
      "execute_command": "echo '{{user `ubuntu_template_password`}}' | sudo -S sh -c '{{ .Vars }} {{ .Path }}'"
    }
  ]
}
